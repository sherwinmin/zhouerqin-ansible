[Unit]
Description=The PHP FastCGI Process Manager
After=network.target

[Service]
Type=simple
PIDFile=/data/app/php-7.2/var/run/php-fpm.pid
ExecStart=/data/app/php-7.2/sbin/php-fpm --nodaemonize --fpm-config /data/app/php-7.2/etc/php-fpm.conf
ExecReload=/bin/kill -USR2 $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
